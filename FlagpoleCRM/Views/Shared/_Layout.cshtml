    <script src="/assets/plugins/toast/js/toastr.min.js"></script>
    <script src="/assets/js/app.js"></script>
    <script>
        function toastr_call(type, title, msg) {
            toastr[type](msg, title);
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "20000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
        }
    </script>
    <script>
        var currentWebsite = '@Common.Constant.CookiesName.CURRENT_WEBSITE';

        $(document).ready(function() {
            loadWebsiteMenu();
        })

        function loadWebsiteMenu() {
            $.ajax({
                type: 'get',
                url: `@Url.Action("GetWebsites", "Website")?accountId=@TempData["id"]`
            }).done(function (res) {
                $('#choose-websites').html('');
                var selectedAttr = 'selected';
                res.forEach((item, index) => {
                    if (localStorage.getItem(currentWebsite) == null || localStorage.getItem(currentWebsite) == undefined) {
                        localStorage.setItem(currentWebsite, item.guid);
                    }
                    else {
                        if (localStorage.getItem(currentWebsite) != item.guid) {
                            selectedAttr = '';
                        }
                        else {
                            selectedAttr = 'selected';
                        }
                    }

                    $('#choose-websites').append(`<option value="${item.guid}" ${selectedAttr}>${item.url}</option>`);
                })
            })
        }

        $('#choose-websites').change(function() {
            localStorage.setItem(currentWebsite, $('#choose-websites').find(":selected").val());
        })

        $('#logout').click(function() {
            $.ajax({
                url: '/login/authentication/logout',
                type: 'get',
                success: (result) => {
                    if (!result.isSuccessful) {
                        toastr_call('error', 'Error', 'Cannot log out, please try again later');
                    }
                    else {
                        localStorage.clear();
                        location.reload();
                    }
                }
            })
        })

        function convertDate(date) {
            var datePart = date.match(/\d+/g),
                year = datePart[0].substring(),
                month = datePart[1], 
                day = datePart[2];

            return day + '/' + month + '/' + year;
        }

        function convertDateTime(datetime) {
            var datePart = datetime.match(/\d+/g),
                year = datePart[0].substring(),
                month = datePart[1], 
                day = datePart[2],
                hour = datePart[3],
                minute = datePart[4];

            return day + '/' + month + '/' + year + ' ' + hour + ':' + minute;
        }

        function getDateTimeFromDateObj(dateObject) {
            var year = dateObject.getFullYear();
            var month = (dateObject.getMonth() + 1).toString().padStart(2, '0');
            var day = dateObject.getDate().toString().padStart(2, '0');
            var hours = dateObject.getHours().toString().padStart(2, '0');
            var minutes = dateObject.getMinutes().toString().padStart(2, '0');
            return `${year}-${month}-${day}T${hours}:${minutes}`;
        }
    </script>
    @await RenderSectionAsync("Script", required: false)

</body>

